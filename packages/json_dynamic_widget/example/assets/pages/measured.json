{
  "type": "scaffold",
  "args": {
    "appBar": {
      "type": "app_bar",
      "args": {
        "title": {
          "type": "text",
          "args": {
            "text": "Measured"
          }
        }
      }
    },
    "body": {
      "type": "list_view",
      "args": {
        "children": [
          {
            "type": "container",
            "id": "scroll_pre_container",
            "args": {
              "color": "999",
              "height": 100.0,
              "child": {
                "type": "center",
                "args": {
                  "child": {
                    "type": "column",
                    "args": {
                      "mainAxisSize": "min",
                      "children": [
                        {
                          "type": "text",
                          "args": {
                            "style": {
                              "fontWeight": "bold"
                            },
                            "text": "pre-container"
                          }
                        },
                        {
                          "type": "row",
                          "args": {
                            "mainAxisSize": "min",
                            "children": [
                              {
                                "type": "text",
                                "listen": [
                                  "container.width"
                                ],
                                "args": {
                                  "text": "${container.width}"
                                }
                              },
                              {
                                "type": "text",
                                "args": {
                                  "text": " x "
                                }
                              },
                              {
                                "type": "text",
                                "listen": [
                                  "container.height"
                                ],
                                "args": {
                                  "text": "${container.height}"
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          {
            "type": "container",
            "args": {
              "color": "aaa",
              "height": 100.0,
              "child": {
                "type": "center",
                "args": {
                  "child": {
                    "type": "measured",
                    "id": "text",
                    "args": {
                      "child": {
                        "type": "column",
                        "args": {
                          "mainAxisSize": "min",
                          "children": [
                            {
                              "type": "text",
                              "args": {
                                "style": {
                                  "fontWeight": "bold"
                                },
                                "text": "text"
                              }
                            },
                            {
                              "type": "row",
                              "args": {
                                "mainAxisSize": "min",
                                "children": [
                                  {
                                    "type": "text",
                                    "listen": [
                                      "text.width"
                                    ],
                                    "args": {
                                      "text": "${text.width}"
                                    }
                                  },
                                  {
                                    "type": "text",
                                    "args": {
                                      "text": " x "
                                    }
                                  },
                                  {
                                    "type": "text",
                                    "listen": [
                                      "text.height"
                                    ],
                                    "args": {
                                      "text": "${text.height}"
                                    }
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          {
            "type": "container",
            "args": {
              "color": "bbb",
              "height": 100.0,
              "child": {
                "type": "container",
                "args": {
                  "child": {
                    "type": "center",
                    "args": {
                      "child": {
                        "type": "measured",
                        "id": "text_bold",
                        "args": {
                          "child": {
                            "type": "column",
                            "args": {
                              "mainAxisSize": "min",
                              "children": [
                                {
                                  "type": "text",
                                  "args": {
                                    "style": {
                                      "fontWeight": "bold"
                                    },
                                    "text": "text_bold"
                                  }
                                },
                                {
                                  "type": "row",
                                  "args": {
                                    "mainAxisSize": "min",
                                    "children": [
                                      {
                                        "type": "text",
                                        "listen": [
                                          "text_bold.width"
                                        ],
                                        "args": {
                                          "style": {
                                            "fontWeight": "bold"
                                          },
                                          "text": "${text_bold.width}"
                                        }
                                      },
                                      {
                                        "type": "text",
                                        "args": {
                                          "style": {
                                            "fontWeight": "bold"
                                          },
                                          "text": " x "
                                        }
                                      },
                                      {
                                        "type": "text",
                                        "listen": [
                                          "text_bold.height"
                                        ],
                                        "args": {
                                          "style": {
                                            "fontWeight": "bold"
                                          },
                                          "text": "${text_bold.height}"
                                        }
                                      }
                                    ]
                                  }
                                }
                              ]
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          {
            "type": "container",
            "id": "scroll_container",
            "args": {
              "alignment": "center",
              "child": {
                "type": "container",
                "args": {
                  "color": "ccc",
                  "height": 100.0,
                  "width": 300.0,
                  "child": {
                    "type": "measured",
                    "id": "container",
                    "args": {
                      "child": {
                        "type": "center",
                        "args": {
                          "child": {
                            "type": "column",
                            "args": {
                              "mainAxisSize": "min",
                              "children": [
                                {
                                  "type": "text",
                                  "args": {
                                    "style": {
                                      "fontWeight": "bold"
                                    },
                                    "text": "container"
                                  }
                                },
                                {
                                  "type": "row",
                                  "args": {
                                    "mainAxisSize": "min",
                                    "children": [
                                      {
                                        "type": "text",
                                        "listen": [
                                          "container.width"
                                        ],
                                        "args": {
                                          "text": "${container.width}"
                                        }
                                      },
                                      {
                                        "type": "text",
                                        "args": {
                                          "text": " x "
                                        }
                                      },
                                      {
                                        "type": "text",
                                        "listen": [
                                          "container.height"
                                        ],
                                        "args": {
                                          "text": "${container.height}"
                                        }
                                      }
                                    ]
                                  }
                                }
                              ]
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        ]
      }
    }
  }
}